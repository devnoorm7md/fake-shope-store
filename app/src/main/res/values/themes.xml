    <style name="Theme.FakeShopeStore" parent="Base.Theme.FakeShopeStore" />

    <style name="Widget.Material3.BottomNavigationView.style" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/purple</item>
        <item name="android:background">@color/primary</item>
        <item name="itemTextColor">@drawable/navigation_item_text_color</item>
        <item name="itemIconTint">@drawable/navigation_item_color</item>
        <item name="itemActiveIndicatorStyle">@style/App.Custom.Indicator</item>
